<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.duowei.kitchen_china.fragment.TopFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/uncook"/>
                    <TextView
                        android:id="@+id/tv_uncook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/greenDark"
                        android:textSize="@dimen/textsize20"
                        android:text="共9项菜品"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/cooked"/>
                    <TextView
                        android:id="@+id/tv_cooked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/greenDark"
                        android:textSize="@dimen/textsize20"
                        android:layout_marginLeft="5dp"
                        android:text="待煮菜品9项"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/btn_history"
                        style="@style/TopButton"
                        android:text="历史菜品"/>
                    <Button
                        android:id="@+id/btn_search"
                        style="@style/TopButton"
                        android:text="查询菜品"/>
                    <Button
                        android:id="@+id/btn_overtime"
                        style="@style/TopButton"
                        android:text="超时单品"/>
                    <Button
                        android:id="@+id/btn_saleout"
                        style="@style/TopButton"
                        android:text="沽清"/>
                    <Button
                        android:id="@+id/btn_setting"
                        style="@style/TopButton"
                        android:text="设置"/>
                    <Button
                        android:id="@+id/btn_exit"
                        style="@style/TopButton"
                        android:text="退出"/>
                </LinearLayout>
            </LinearLayout>
</FrameLayout>
